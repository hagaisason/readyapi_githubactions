{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Schema of translated Release Notes",
    "javaType": "domain.backend.mbb.v1.models.uota_v3.ReleaseNotes",

    "type": "object",
    "required": [
        "Language",
        "Title",
        "DownloadDescription",
        "UpdateDescription",
        "FreeText"
    ],
    "additionalProperties": false,
    "properties": {
        "Language": {
            "type": "string",
            "description": "Language code",
            "pattern": "^[a-zA-Z0-9_]{5}$"
        },
        "Title": {
            "type": "string",
            "description": "Short name/title of update",
            "pattern": "^[^\n]+$",
            "minLength": 1,
            "maxLength": 1024
        },
        "DownloadDescription": {
            "type": "string",
            "maxLength": 5128
        },
        "UpdateDescription": {
            "type": "string",
            "maxLength": 5128
        },
        "FreeText": {
            "type": "string",
            "maxLength": 1024
        }
    }
}